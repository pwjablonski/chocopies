            <form>
              <div class="field">
                <label class="label">Your Name</label>
                <div class="control has-icons-left has-icons-right">
                  <input
                    class="input"
                    type="text"
                    placeholder="John G"
                    maxlength="18"
                    required
                  />
                  <span class="icon is-small is-left">
                    <i class="fas fa-user"></i>
                  </span>
                </div>
              </div>

              <div class="field sender-email">
                <label class="label">Your Email</label>
                <div class="control has-icons-left has-icons-right">
                  <input
                    class="input"
                    type="email"
                    placeholder="email@email.com"
                    required
                  />
                  <span class="icon is-small is-left">
                    <i class="fas fa-envelope"></i>
                  </span>
                  <p class="help is-danger"></p>
                </div>
              </div>

              <div class="field">
                <label class="label">Your Friend's Name</label>
                <div class="control has-icons-left has-icons-right">
                  <input
                    class="input"
                    type="text"
                    placeholder="Recipient's Name"
                    maxlength="18"
                    required
                  />
                  <span class="icon is-small is-left">
                    <i class="fas fa-user"></i>
                  </span>
                </div>
              </div>

              <div class="field">
                <label class="label">Your Friend's Email</label>
                <div class="control has-icons-left has-icons-right">
                  <input
                    class="input"
                    type="email"
                    placeholder="email@email.com"
                    required
                  />
                  <span class="icon is-small is-left">
                    <i class="fas fa-envelope"></i>
                  </span>
                </div>
              </div>

              <div class="field">
                <label class="label">Personal Message</label>
                <div class="control">
                  <textarea class="textarea" rows="2"></textarea>
                </div>
              </div>

              <div class="field">
                <div class="control">
                  <label class="checkbox">
                    <input type="checkbox" checked />
                    Yes, I would like to join the mailing list.
                  </label>
                </div>
              </div>

              <div class="field is-grouped">
                <div class="control">
                  <input style="font-size:larger;font-weight:bold;"class="button is-link" type="submit" value="SEND" />
                </div>
              </div>
